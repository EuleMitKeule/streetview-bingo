{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.debugPort": 3007,
    "python.testing.cwd": "${workspaceFolder}/backend/src",
    "python.testing.pytestArgs": [
        "--cov=${workspaceFolder}/backend/src",
        "--cov-report=xml:../coverage/coverage.xml",
        "--cov-config=${workspaceFolder}/backend/config/.coveragerc",
        "--config=${workspaceFolder}/backend/config/test.config.yml",
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/__pycache__": true,
    },
}